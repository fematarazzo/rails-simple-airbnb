<div class="container mt-3">
  <h1 class="mb-3">All our Flats (<%= @flats.count %>) </h1>
  <div class="d-flex justify-content-evenly flex-wrap">
    <% @flats.each do |flat| %>
      <div class="card mx-2 card-main" style="width: 16rem;">
        <div class="card-image">
          <img src="https://source.unsplash.com/random/?house" class="card-img-top" alt="A house">
        </div>
        <div class="card-body">
          <h5 class="card-title"> <%= flat.name %></h5>
          <p class="card-text"> <%= flat.address %></p>

            <div class="d-flex text-right">
              <p class="card-text"><i class="fas fa-user-friends mr-1"></i> <%= flat.number_of_guests %> </p>
              <p class="card-text ml-3"><i class="fas fa-dollar-sign mr-1"></i> <%= flat.price_per_night %> </p>
            </div>
            <hr>
            <div class="d-flex text-right">
              <%= link_to "More info", flat_path(flat), class:"card-link" %>
              <%= link_to "Edit", edit_flat_path(flat), class:"card-link yellow" %>
              <%= link_to "Destroy", flat_path(flat), method: :delete,
              data: { confirm: "Are you sure?" }, class:"card-link red" %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
